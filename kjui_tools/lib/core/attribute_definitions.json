{
  "_comment": "Component attribute definitions for cross-platform JsonUI. Binding format: @{propertyName}",
  "common": {
    "_comment": "Common attributes shared across all components"
  },
  "Switch": {
    "_alias": "Toggle",
    "_comment": "Switch is the primary component name. Toggle is supported as an alias for backward compatibility.",
    "isOn": {
      "type": [
        "boolean",
        "binding"
      ],
      "description": "Switch state (binding for two-way)"
    },
    "bind": {
      "type": "binding",
      "description": "Two-way binding @{variable}"
    },
    "enabled": {
      "type": [
        "boolean",
        "binding"
      ],
      "description": "Whether enabled (can be data binding)"
    },
    "onTintColor": {
      "type": "string",
      "description": "Track color when on"
    },
    "thumbTintColor": {
      "type": "string",
      "description": "Thumb color when on"
    },
    "onValueChange": {
      "type": "string",
      "description": "Value change handler function name"
    }
  },
  "Toggle": {
    "_alias_of": "Switch",
    "_comment": "Toggle is an alias for Switch. Maintained for backward compatibility. New code should use Switch.",
    "isOn": {
      "type": [
        "boolean",
        "binding"
      ],
      "description": "Toggle state (binding for two-way)"
    },
    "bind": {
      "type": "binding",
      "description": "Two-way binding @{variable}"
    },
    "enabled": {
      "type": [
        "boolean",
        "binding"
      ],
      "description": "Whether enabled (can be data binding)"
    },
    "onTintColor": {
      "type": "string",
      "description": "Track color when on"
    },
    "thumbTintColor": {
      "type": "string",
      "description": "Thumb color when on"
    },
    "onValueChange": {
      "type": "string",
      "description": "Value change handler function name"
    }
  }
}
