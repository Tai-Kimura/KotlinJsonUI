<?xml version="1.0" encoding="UTF-8"?>
<!-- Generated from converter_test.json with Data Binding -->
<!-- DO NOT EDIT MANUALLY - Use 'kjui generate' to update -->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.example.kotlinjsonui.sample.data.ConverterTestData"/>
        <variable
            name="viewModel"
            type="com.example.kotlinjsonui.sample.viewmodels.ConverterTestViewModel"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:textColor="#FFFFFF"
                tools:cornerRadius="8dp"
                android:text="Dynamic: @{dynamicModeStatus}"
                android:onClick="toggleDynamicMode"
                android:background="#5856D6"
                android:textSize="14sp"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.title}"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GradientView Test"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diagonal Gradient"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"/>
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BlurView Test"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="#4CAF50">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BACKGROUND TEXT"
                        android:textSize="24sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This will be blurred"
                        android:textSize="16sp"
                        android:textColor="#FFD700"
                        android:layout_marginTop="50dp"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#00000033"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear Text on Blur Layer"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"/>
                </View>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WebView Test"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"/>
            <WebView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TabView Test"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"/>
            <TabLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collection Test"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"/>
            <RecyclerView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                tools:entries="@{data.items}"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image Test"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NetworkImage Test"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                tools:src="https://picsum.photos/400/300"
                tools:cornerRadius="10dp"/>
        </LinearLayout>
    </ScrollView>
</layout>