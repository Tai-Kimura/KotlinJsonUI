<?xml version="1.0" encoding="UTF-8"?>
<!-- Generated from secure_field_test.json with Data Binding -->
<!-- DO NOT EDIT MANUALLY - Use 'kjui generate' to update -->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.example.kotlinjsonui.sample.data.SecureFieldTestData"/>
        <variable
            name="viewModel"
            type="com.example.kotlinjsonui.sample.viewmodels.SecureFieldTestViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textColor="#FFFFFF"
            tools:cornerRadius="8dp"
            android:text="Dynamic: @{dynamicModeStatus}"
            android:onClick="toggleDynamicMode"
            android:background="#5856D6"
            android:textSize="14sp"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@{data.title}"
            android:textSize="24sp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular TextField (not secure)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/regular_field"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Enter regular text"
            android:text="@{data.regularText}"
            android:background="#FFFFFF"
            tools:cornerRadius="8dp"
            tools:strokeColor="#CCCCCC"
            tools:strokeWidth="1dp"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure TextField (password)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Enter password"
            android:text="@{data.password}"
            android:background="#FFFFFF"
            tools:cornerRadius="8dp"
            tools:strokeColor="#CCCCCC"
            tools:strokeWidth="1dp"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password (also secure)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/confirm_password_field"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Confirm password"
            android:text="@{data.confirmPassword}"
            android:background="#FFFFFF"
            tools:cornerRadius="8dp"
            tools:strokeColor="#CCCCCC"
            tools:strokeWidth="1dp"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="15dp"
            android:background="#E0E0E0"
            tools:cornerRadius="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Values entered:"
                android:textSize="14sp"
                android:textColor="#333333"
                android:fontFamily="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular: @{regularText}"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password: [hidden]"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm: [hidden]"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>