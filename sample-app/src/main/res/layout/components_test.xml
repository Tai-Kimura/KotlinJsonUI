                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/components_test_download_progress"
                android:layout_margin="0dp"/>
            <SeekBar
                android:id="@+id/slider1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/components_test_volume"
                android:min="0"
                android:max="1"
