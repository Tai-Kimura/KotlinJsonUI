<?xml version="1.0" encoding="UTF-8"?>
<!-- Generated from disabled_test.json with Data Binding -->
<!-- DO NOT EDIT MANUALLY - Use 'kjui generate' to update -->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.example.kotlinjsonui.sample.data.DisabledTestData"/>
        <variable
            name="viewModel"
            type="com.example.kotlinjsonui.sample.viewmodels.DisabledTestViewModel"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:textColor="#FFFFFF"
                tools:cornerRadius="8dp"
                android:text="Dynamic: @{dynamicModeStatus}"
                android:onClick="toggleDynamicMode"
                android:background="#5856D6"
                android:textSize="14sp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@{data.title}"
                android:textSize="24sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enabled Button"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Enabled Button"
                android:background="#007AFF"
                android:textColor="#FFFFFF"
                tools:cornerRadius="8dp"
                android:enabled="true"
                android:onClick="onEnabledButtonTap"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disabled Button"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Disabled Button"
                android:background="#007AFF"
                android:textColor="#FFFFFF"
                tools:cornerRadius="8dp"
                android:enabled="false"
                android:onClick="onDisabledButtonTap"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TouchDisabledState Button"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Touch Disabled"
                android:background="#FF9500"
                android:textColor="#FFFFFF"
                tools:cornerRadius="8dp"
                android:onClick="onTouchDisabledTap"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enabled TextField"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Enabled - can type here"
                android:text="@{data.textFieldValue}"
                android:background="#FFFFFF"
                android:padding="10dp"
                tools:cornerRadius="8dp"
                tools:strokeColor="#CCCCCC"
                tools:strokeWidth="1dp"
                android:enabled="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disabled TextField"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Disabled - cannot type"
                android:text="Disabled text field"
                android:background="#FFFFFF"
                android:padding="10dp"
                tools:cornerRadius="8dp"
                tools:strokeColor="#CCCCCC"
                tools:strokeWidth="1dp"
                android:enabled="false"
                android:textColor="#666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dynamic Enable/Disable Test"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginTop="30dp"
                android:fontFamily="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Toggle Enable State"
                android:background="#34C759"
                android:textColor="#FFFFFF"
                tools:cornerRadius="8dp"
                android:onClick="toggleEnableState"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Dynamic Button"
                android:background="#5856D6"
                android:textColor="#FFFFFF"
                tools:cornerRadius="8dp"
                android:enabled="@{data.isEnabled}"
                android:onClick="onDynamicButtonTap"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current state: @{isEnabled}"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>
</layout>