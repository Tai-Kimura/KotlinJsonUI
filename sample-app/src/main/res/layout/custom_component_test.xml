<?xml version="1.0" encoding="UTF-8"?>
<!-- Generated from custom_component_test.json with Data Binding -->
<!-- DO NOT EDIT MANUALLY - Use 'kjui generate' to update -->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.example.kotlinjsonui.sample.data.CustomComponentTestData"/>
        <variable
            name="viewModel"
            type="com.example.kotlinjsonui.sample.viewmodels.CustomComponentTestViewModel"/>
    </data>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F7">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Component Test"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:padding="0dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Testing SampleCard - Static Values"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:padding="0dp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:title="Static Title"
                    tools:count="42"
                    android:padding="16dp"
                    android:background="#FFFFFF"
                    tools:cornerRadius="12dp"
                    tools:strokeWidth="1dp"
                    tools:strokeColor="#E0E0E0">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card Content"
                            android:textSize="14sp"
                            android:textColor="#666666"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This content is inside the custom component"
                            android:textSize="12sp"
                            android:textColor="#999999"/>
                    </LinearLayout>
                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Testing SampleCard - Dynamic Values"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:padding="20dp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:title="@{data.cardTitle}"
                    tools:count="@{data.itemCount}"
                    android:padding="16dp"
                    android:background="#FFFFFF"
                    tools:cornerRadius="12dp"
                    tools:strokeWidth="1dp"
                    tools:strokeColor="#E0E0E0">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dynamic count: @{itemCount}"
                            android:textSize="16sp"
                            android:textColor="#5856D6"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Increment"
                                android:background="#5856D6"
                                android:textColor="#FFFFFF"
                                tools:cornerRadius="8dp"
                                android:padding="8dp"
                                android:onClick="incrementCount"/>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Decrement"
                                android:background="#FF3B30"
                                android:textColor="#FFFFFF"
                                tools:cornerRadius="8dp"
                                android:padding="8dp"
                                android:onClick="decrementCount"/>
                        </LinearLayout>
                    </LinearLayout>
                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Testing Multiple Cards"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:padding="20dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:title="Card 1"
                        tools:count="1"
                        android:padding="12dp"
                        android:background="#E8F5E9"
                        tools:cornerRadius="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Content for card 1"
                            android:textSize="14sp"
                            android:textColor="#2E7D32"/>
                    </View>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:title="Card 2"
                        tools:count="2"
                        android:padding="12dp"
                        android:background="#FFF3E0"
                        tools:cornerRadius="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Content for card 2"
                            android:textSize="14sp"
                            android:textColor="#E65100"/>
                    </View>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:title="Card 3"
                        tools:count="3"
                        android:padding="12dp"
                        android:background="#F3E5F5"
                        tools:cornerRadius="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Content for card 3"
                            android:textSize="14sp"
                            android:textColor="#6A1B9A"/>
                    </View>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Testing StatusBadge - Non-Container Component"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:padding="20dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:title="Static Status"
                        android:tint="#4CAF50"
                        tools:count="5"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:title="Dynamic Status"
                        android:tint="@{data.statusColor}"
                        tools:count="@{data.notificationCount}"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:title="Error Status"
                        android:tint="#FF3B30"
                        tools:count="0"/>
                </LinearLayout>
                <Button
                    android:layout_width=""
                    android:layout_height="wrap_content"
                    android:text="Toggle Dynamic Mode"
                    android:onClick="toggleDynamicMode"
                    android:background="#5856D6"
                    android:textColor="#FFFFFF"
                    tools:cornerRadius="8dp"
                    android:padding="12dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dynamic Mode: @{dynamicModeStatus}"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </ScrollView>
    </View>
</layout>