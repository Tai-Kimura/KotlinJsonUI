                android:textSize="16sp"
                android:textColor="#000000"
                android:background="#FFFFFF"
                tools:cornerRadius="10dp"
                android:layout_marginBottom="24dp"
                tools:strokeColor="#E0E0E0"
                tools:strokeWidth="1dp"/>
