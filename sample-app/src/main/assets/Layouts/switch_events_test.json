{
  "type": "SafeAreaView",
  "child": {
    "type": "Scroll",
    "child": {
      "type": "View",
      "id": "container",
      "orientation": "vertical",
      "background": "#F5F5F5",
      "child": [
    {
      "type": "Label",
      "text": "Switch Events Test",
      "fontSize": 24,
      "fontWeight": "bold",
      "topMargin": 20,
      "bottomMargin": 20,
      "centerHorizontal": true
    },
    {
      "type": "Label",
      "text": "Switch with onValueChange",
      "fontSize": 18,
      "fontWeight": "semibold",
      "topMargin": 10,
      "leftMargin": 20
    },
    {
      "type": "Switch",
      "id": "notificationSwitch",
      "text": "Enable Notifications",
      "isOn": true,
      "onValueChange": "handleNotificationChange",
      "leftMargin": 20,
      "rightMargin": 20,
      "topMargin": 10
    },
    {
      "type": "Label",
      "id": "notificationStatus",
      "text": "@{notificationStatus}",
      "fontSize": 14,
      "fontColor": "#666666",
      "leftMargin": 20,
      "topMargin": 10
    },
    {
      "type": "Label",
      "text": "Switch with Custom Tint",
      "fontSize": 18,
      "fontWeight": "semibold",
      "topMargin": 30,
      "leftMargin": 20
    },
    {
      "type": "Switch",
      "id": "darkModeSwitch",
      "text": "Dark Mode",
      "isOn": false,
      "tint": "#FF6B6B",
      "onValueChange": "handleDarkModeChange",
      "leftMargin": 20,
      "rightMargin": 20,
      "topMargin": 10
    },
    {
      "type": "Label",
      "text": "@{darkModeStatus}",
      "fontSize": 14,
      "fontColor": "#666666",
      "leftMargin": 20,
      "topMargin": 10
    },
    {
      "type": "Label",
      "text": "Multiple Switches with Events",
      "fontSize": 18,
      "fontWeight": "semibold",
      "topMargin": 30,
      "leftMargin": 20
    },
    {
      "type": "Switch",
      "id": "wifiSwitch",
      "text": "Wi-Fi",
      "isOn": true,
      "tintColor": "#4CAF50",
      "onValueChange": "handleWifiChange",
      "leftMargin": 20,
      "rightMargin": 20,
      "topMargin": 10
    },
    {
      "type": "Switch",
      "id": "bluetoothSwitch",
      "text": "Bluetooth",
      "isOn": false,
      "tintColor": "#2196F3",
      "onValueChange": "handleBluetoothChange",
      "leftMargin": 20,
      "rightMargin": 20,
      "topMargin": 10
    },
    {
      "type": "Switch",
      "id": "locationSwitch",
      "text": "Location Services",
      "isOn": true,
      "tintColor": "#FF9800",
      "onValueChange": "handleLocationChange",
      "leftMargin": 20,
      "rightMargin": 20,
      "topMargin": 10
    },
    {
      "type": "Label",
      "text": "Status: @{connectionStatus}",
      "fontSize": 14,
      "fontColor": "#666666",
      "fontWeight": "semibold",
      "leftMargin": 20,
      "topMargin": 20
    }
      ]
    }
  },
  "data": [
    {
      "name": "notificationStatus",
      "class": "String",
      "defaultValue": "Notifications are enabled"
    },
    {
      "name": "darkModeStatus",
      "class": "String",
      "defaultValue": "Dark mode is off"
    },
    {
      "name": "connectionStatus",
      "class": "String",
      "defaultValue": "Active: Wi-Fi, Location"
    }
  ]
}