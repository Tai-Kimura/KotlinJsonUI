{
  "type": "ScrollView",
  "width": "matchParent",
  "height": "matchParent",
  "background": "#FFFFFF",
  "child": [
    {
      "type": "View",
      "width": "matchParent",
      "height": "wrapContent",
      "orientation": "vertical",
      "child": [
        {
          "type": "Button",
          "style": "dynamic_toggle",
          "fontColor": "#FFFFFF",
          "cornerRadius": 8
        },
        {
          "type": "Label",
          "id": "title_label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 20,
          "text": "@{title}",
          "fontSize": 24,
          "fontColor": "#000000"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 20,
          "text": "Visibility: visible (default)",
          "visibility": "visible",
          "background": "#D0FFD0",
          "fontSize": 16,
          "fontColor": "#000000"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 10,
          "text": "This label is invisible (takes space)",
          "visibility": "invisible",
          "background": "#FFD0D0",
          "fontSize": 16,
          "fontColor": "#000000"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 10,
          "text": "After invisible label",
          "background": "#D0D0FF",
          "fontSize": 16,
          "fontColor": "#000000"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 10,
          "text": "This label is gone (no space)",
          "visibility": "gone",
          "background": "#FFFFD0",
          "fontSize": 16,
          "fontColor": "#000000"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 10,
          "text": "After gone label (no gap)",
          "background": "#FFD0FF",
          "fontSize": 16,
          "fontColor": "#000000"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 30,
          "text": "Opacity Tests",
          "fontSize": 18,
          "fontColor": "#333333"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 10,
          "text": "Opacity: 1.0 (fully visible)",
          "opacity": 1.0,
          "background": "#FFE0E0",
          "fontSize": 16,
          "fontColor": "#000000"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 10,
          "text": "Opacity: 0.7",
          "opacity": 0.7,
          "background": "#E0FFE0",
          "fontSize": 16,
          "fontColor": "#000000"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 10,
          "text": "Opacity: 0.5",
          "opacity": 0.5,
          "background": "#E0E0FF",
          "fontSize": 16,
          "fontColor": "#000000"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 10,
          "text": "Opacity: 0.3",
          "opacity": 0.3,
          "background": "#FFFFE0",
          "fontSize": 16,
          "fontColor": "#000000"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 10,
          "text": "Opacity: 0.1",
          "opacity": 0.1,
          "background": "#FFD0FF",
          "fontSize": 16,
          "fontColor": "#000000"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 30,
          "text": "Alpha Test (same as opacity)",
          "fontSize": 18,
          "fontColor": "#333333"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 10,
          "text": "Alpha: 0.6",
          "alpha": 0.6,
          "background": "#D0FFFF",
          "fontSize": 16,
          "fontColor": "#000000"
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 30,
          "text": "Dynamic Visibility Tests",
          "fontSize": 18,
          "fontColor": "#333333",
          "fontWeight": "bold"
        },
        {
          "type": "Button",
          "text": "Toggle Visibility",
          "onClick": "toggleVisibility",
          "topMargin": 10,
          "background": "#007AFF",
          "textColor": "#FFFFFF",
          "fontColor": "#FFFFFF",
          "cornerRadius": 8
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 10,
          "text": "This text uses dynamic visibility",
          "visibility": "@{textVisibility}",
          "background": "#FFE0E0",
          "fontSize": 16,
          "fontColor": "#000000",
          "padding": 10
        },
        {
          "type": "Button",
          "text": "Toggle Hidden",
          "onClick": "toggleHidden",
          "topMargin": 20,
          "background": "#34C759",
          "textColor": "#FFFFFF",
          "fontColor": "#FFFFFF",
          "cornerRadius": 8
        },
        {
          "type": "Label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 10,
          "text": "This text uses dynamic hidden attribute",
          "hidden": "@{isHidden}",
          "background": "#E0FFE0",
          "fontSize": 16,
          "fontColor": "#000000",
          "padding": 10
        }
      ]
    }
  ],
  "data": [
    {
      "name": "dynamicModeStatus",
      "class": "String",
      "defaultValue": "OFF"
    },
    {
      "name": "title",
      "class": "String",
      "defaultValue": "Visibility & Opacity Test"
    },
    {
      "name": "textVisibility",
      "class": "String",
      "defaultValue": "visible"
    },
    {
      "name": "isHidden",
      "class": "Boolean",
      "defaultValue": false
    }
  ]
}