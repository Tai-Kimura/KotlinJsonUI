{
  "type": "ScrollView",
  "width": "matchParent",
  "height": "matchParent",
  "background": "white",
  "child": [
    {
      "type": "View",
      "width": "matchParent",
      "height": "wrapContent",
      "orientation": "vertical",
      "child": [
        {
          "type": "Button",
          "style": "dynamic_toggle",
          "fontColor": "white",
          "cornerRadius": 8
        },
        {
          "type": "Label",
          "id": "title_label",
          "width": "wrapContent",
          "height": "wrapContent",
          "topMargin": 20,
          "text": "@{title}",
          "fontSize": 24,
          "fontColor": "black"
        },
        {
          "type": "Label",
          "text": "Enabled Button",
          "fontSize": 16,
          "fontColor": "dark_gray",
          "topMargin": 20
        },
        {
          "type": "Button",
          "width": "matchParent",
          "height": 44,
          "topMargin": 10,
          "leftMargin": 20,
          "rightMargin": 20,
          "text": "Enabled Button",
          "background": "medium_blue",
          "fontColor": "white",
          "cornerRadius": 8,
          "enabled": true,
          "onclick": "onEnabledButtonTap"
        },
        {
          "type": "Label",
          "text": "Disabled Button",
          "fontSize": 16,
          "fontColor": "dark_gray",
          "topMargin": 20
        },
        {
          "type": "Button",
          "width": "matchParent",
          "height": 44,
          "topMargin": 10,
          "leftMargin": 20,
          "rightMargin": 20,
          "text": "Disabled Button",
          "background": "medium_blue",
          "disabledBackground": "pale_gray_4",
          "fontColor": "white",
          "disabledFontColor": "#999999",
          "cornerRadius": 8,
          "enabled": false,
          "onclick": "onDisabledButtonTap"
        },
        {
          "type": "Label",
          "text": "TouchDisabledState Button",
          "fontSize": 16,
          "fontColor": "dark_gray",
          "topMargin": 20
        },
        {
          "type": "Button",
          "width": "matchParent",
          "height": 44,
          "topMargin": 10,
          "leftMargin": 20,
          "rightMargin": 20,
          "text": "Touch Disabled",
          "background": "medium_red_3",
          "fontColor": "white",
          "cornerRadius": 8,
          "touchDisabledState": true,
          "onclick": "onTouchDisabledTap"
        },
        {
          "type": "Label",
          "text": "Enabled TextField",
          "fontSize": 16,
          "fontColor": "dark_gray",
          "topMargin": 20
        },
        {
          "type": "TextField",
          "width": "matchParent",
          "height": 44,
          "topMargin": 10,
          "leftMargin": 20,
          "rightMargin": 20,
          "hint": "Enabled - can type here",
          "text": "@{textFieldValue}",
          "background": "white",
          "padding": 10,
          "cornerRadius": 8,
          "borderColor": "pale_gray_4",
          "borderWidth": 1,
          "enabled": true
        },
        {
          "type": "Label",
          "text": "Disabled TextField",
          "fontSize": 16,
          "fontColor": "dark_gray",
          "topMargin": 20
        },
        {
          "type": "TextField",
          "width": "matchParent",
          "height": 44,
          "topMargin": 10,
          "leftMargin": 20,
          "rightMargin": 20,
          "hint": "Disabled - cannot type",
          "text": "Disabled text field",
          "background": "white",
          "disabledBackground": "pale_gray",
          "padding": 10,
          "cornerRadius": 8,
          "borderColor": "pale_gray_4",
          "borderWidth": 1,
          "enabled": false,
          "fontColor": "medium_gray_4",
          "disabledFontColor": "#999999"
        },
        {
          "type": "Label",
          "text": "Dynamic Enable/Disable Test",
          "fontSize": 16,
          "fontColor": "dark_gray",
          "topMargin": 30,
          "font": "bold"
        },
        {
          "type": "Button",
          "width": "matchParent",
          "height": 44,
          "topMargin": 10,
          "leftMargin": 20,
          "rightMargin": 20,
          "text": "Toggle Enable State",
          "background": "medium_green",
          "fontColor": "white",
          "cornerRadius": 8,
          "onclick": "toggleEnableState"
        },
        {
          "type": "Button",
          "width": "matchParent",
          "height": 44,
          "topMargin": 10,
          "leftMargin": 20,
          "rightMargin": 20,
          "text": "Dynamic Button",
          "background": "medium_blue_3",
          "disabledBackground": "pale_gray_3",
          "fontColor": "white",
          "disabledFontColor": "#888888",
          "cornerRadius": 8,
          "enabled": "@{isEnabled}",
          "onclick": "onDynamicButtonTap"
        },
        {
          "type": "Label",
          "text": "Current state: @{isEnabled}",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "topMargin": 10,
          "centerHorizontal": true
        }
      ]
    }
  ],
  "data": [
    {
      "name": "dynamicModeStatus",
      "class": "String",
      "defaultValue": "OFF"
    },
    {
      "name": "isEnabled",
      "class": "Bool",
      "defaultValue": "true"
    },
    {
      "name": "textFieldValue",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "title",
      "class": "String",
      "defaultValue": "Disabled State Test"
    }
  ]
}