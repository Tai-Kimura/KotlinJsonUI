{
  "type": "ScrollView",
  "width": "matchParent",
  "height": "matchParent",
  "background": "white",
  "keyboardAvoidance": true,
  "child": [
    {
      "type": "View",
      "width": "matchParent",
      "height": "wrapContent",
      "orientation": "vertical",
      "padding": 16,
      "child": [
        {
          "type": "Button",
          "style": "dynamic_toggle",
          "fontColor": "white",
          "cornerRadius": 8
        },
        {
          "type": "Label",
          "text": "@{title}",
          "fontSize": 28,
          "fontColor": "dark_gray",
          "fontWeight": "bold",
          "bottomMargin": 24
        },
        {
          "type": "Label",
          "text": "Personal Information",
          "fontSize": 20,
          "fontColor": "medium_blue",
          "fontWeight": "semibold",
          "bottomMargin": 16
        },
        {
          "type": "Label",
          "text": "First Name",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextField",
          "id": "firstName",
          "width": "matchParent",
          "height": 50,
          "placeholder": "Enter your first name",
          "text": "@{firstName}",
          "fontSize": 16,
          "fontColor": "black",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 16,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "Label",
          "text": "Last Name",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextField",
          "id": "lastName",
          "width": "matchParent",
          "height": 48,
          "placeholder": "Enter your last name",
          "text": "@{lastName}",
          "fontSize": 16,
          "fontColor": "black",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 16,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "Label",
          "text": "Email Address",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextField",
          "id": "email",
          "width": "matchParent",
          "height": 48,
          "placeholder": "email@example.com",
          "text": "@{email}",
          "fontSize": 16,
          "fontColor": "black",
          "keyboardType": "email",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 16,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "Label",
          "text": "Phone Number",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextField",
          "id": "phone",
          "width": "matchParent",
          "height": 48,
          "placeholder": "+1 234 567 8900",
          "text": "@{phone}",
          "fontSize": 16,
          "fontColor": "black",
          "keyboardType": "phone",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 24,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "Label",
          "text": "Address Information",
          "fontSize": 20,
          "fontColor": "medium_blue",
          "fontWeight": "semibold",
          "bottomMargin": 16
        },
        {
          "type": "Label",
          "text": "Street Address",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextField",
          "id": "address",
          "width": "matchParent",
          "height": 48,
          "placeholder": "123 Main Street",
          "text": "@{address}",
          "fontSize": 16,
          "fontColor": "black",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 16,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "Label",
          "text": "City",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextField",
          "id": "city",
          "width": "matchParent",
          "height": 48,
          "placeholder": "New York",
          "text": "@{city}",
          "fontSize": 16,
          "fontColor": "black",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 16,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "Label",
          "text": "ZIP Code",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextField",
          "id": "zipCode",
          "width": "matchParent",
          "height": 48,
          "placeholder": "10001",
          "text": "@{zipCode}",
          "fontSize": 16,
          "fontColor": "black",
          "keyboardType": "number",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 16,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "Label",
          "text": "Country",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextField",
          "id": "country",
          "width": "matchParent",
          "height": 48,
          "placeholder": "United States",
          "text": "@{country}",
          "fontSize": 16,
          "fontColor": "black",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 24,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "Label",
          "text": "Professional Information",
          "fontSize": 20,
          "fontColor": "medium_blue",
          "fontWeight": "semibold",
          "bottomMargin": 16
        },
        {
          "type": "Label",
          "text": "Company",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextField",
          "id": "company",
          "width": "matchParent",
          "height": 48,
          "placeholder": "Company Name",
          "text": "@{company}",
          "fontSize": 16,
          "fontColor": "black",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 16,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "Label",
          "text": "Job Title",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextField",
          "id": "jobTitle",
          "width": "matchParent",
          "height": 48,
          "placeholder": "Software Engineer",
          "text": "@{jobTitle}",
          "fontSize": 16,
          "fontColor": "black",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 24,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "Label",
          "text": "Additional Information",
          "fontSize": 20,
          "fontColor": "medium_blue",
          "fontWeight": "semibold",
          "bottomMargin": 16
        },
        {
          "type": "Label",
          "text": "Bio (Flexible Height)",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextView",
          "id": "bio",
          "width": "matchParent",
          "flexible": true,
          "minHeight": 80,
          "maxHeight": 200,
          "text": "@{bio}",
          "hint": "Tell us about yourself...\nThis field will grow as you type",
          "hintColor": "light_gray_8",
          "fontSize": 16,
          "fontColor": "dark_gray",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 16,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "Label",
          "text": "Notes (Fixed Height)",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextView",
          "id": "notes",
          "width": "matchParent",
          "height": 120,
          "text": "@{notes}",
          "hint": "Additional notes...\nFixed height field",
          "hintColor": "light_gray_9",
          "hideOnFocused": false,
          "fontSize": 16,
          "fontColor": "dark_gray",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 16,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "Label",
          "text": "Comments (Very Flexible)",
          "fontSize": 14,
          "fontColor": "medium_gray_4",
          "bottomMargin": 6
        },
        {
          "type": "TextView",
          "id": "comments",
          "width": "matchParent",
          "flexible": true,
          "minHeight": 60,
          "maxHeight": 300,
          "text": "@{comments}",
          "hint": "Any comments?\nThis can grow very tall (up to 300pt)",
          "hintAttributes": {
            "fontColor": "light_gray_10",
            "fontSize": 14,
            "fontStyle": "italic"
          },
          "fontSize": 16,
          "fontColor": "dark_gray",
          "background": "white",
          "cornerRadius": 10,
          "bottomMargin": 24,
          "borderColor": "pale_gray",
          "borderWidth": 1
        },
        {
          "type": "View",
          "width": "matchParent",
          "height": "wrapContent",
          "orientation": "horizontal",
          "bottomMargin": 24,
          "child": [
            {
              "type": "Toggle",
              "id": "agreeToggle",
              "isOn": "@{agreeToTerms}",
              "rightMargin": 12
            },
            {
              "type": "Label",
              "text": "I agree to the Terms and Conditions",
              "fontSize": 14,
              "fontColor": "dark_gray",
              "width": "wrapContent"
            }
          ]
        },
        {
          "type": "Button",
          "width": "matchParent",
          "height": 54,
          "text": "Submit Form",
          "fontSize": 18,
          "fontColor": "white",
          "fontWeight": "semibold",
          "background": "medium_blue",
          "cornerRadius": 12,
          "onclick": "submitForm",
          "bottomMargin": 16
        },
        {
          "type": "Button",
          "width": "matchParent",
          "height": 54,
          "text": "Clear All Fields",
          "fontSize": 18,
          "fontColor": "white",
          "fontWeight": "semibold",
          "background": "white",
          "cornerRadius": 12,
          "borderColor": "medium_red",
          "borderWidth": 2,
          "onclick": "clearForm",
          "bottomMargin": 40
        }
      ]
    }
  ],
  "data": [
    {
      "name": "dynamicModeStatus",
      "class": "String",
      "defaultValue": "OFF"
    },
    {
      "name": "address",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "agreeToTerms",
      "class": "Bool",
      "defaultValue": false
    },
    {
      "name": "bio",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "city",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "comments",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "company",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "country",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "email",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "firstName",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "jobTitle",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "lastName",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "notes",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "phone",
      "class": "String",
      "defaultValue": ""
    },
    {
      "name": "title",
      "class": "String",
      "defaultValue": "Form & Keyboard Test"
    },
    {
      "name": "zipCode",
      "class": "String",
      "defaultValue": ""
    }
  ]
}