{
  "type": "ScrollView",
  "width": "matchParent",
  "height": "matchParent",
  "background": "white",
  "child": [
    {
      "type": "View",
      "width": "matchParent",
      "height": "wrapContent",
      "orientation": "vertical",
      "child": [
        {
          "type": "Button",
          "style": "dynamic_toggle",
          "fontColor": "white",
          "cornerRadius": 8
        },
        {
          "type": "Label",
          "text": "@{title}",
          "fontSize": 24,
          "fontColor": "black",
          "topMargin": 20,
          "bottomMargin": 20
        },
        {
          "type": "Label",
          "text": "GradientView Test",
          "fontSize": 18,
          "fontColor": "dark_gray",
          "topMargin": 10
        },
        {
          "type": "GradientView",
          "width": "matchParent",
          "height": 50,
          "topMargin": 10,
          "colors": [
            "#FF0000",
            "#00FF00",
            "#0000FF"
          ],
          "startPoint": {
            "x": 0,
            "y": 0
          },
          "endPoint": {
            "x": 1,
            "y": 1
          },
          "child": [
            {
              "type": "Label",
              "text": "Diagonal Gradient",
              "fontSize": 16,
              "fontColor": "white",
              "centerInParent": true
            }
          ]
        },
        {
          "type": "Label",
          "text": "BlurView Test",
          "fontSize": 18,
          "fontColor": "dark_gray",
          "topMargin": 20
        },
        {
          "type": "View",
          "width": "matchParent",
          "height": 150,
          "topMargin": 10,
          "background": "medium_green_2",
          "zIndex": true,
          "child": [
            {
              "type": "View",
              "width": "matchParent",
              "height": "matchParent",
              "child": [
                {
                  "type": "Label",
                  "text": "BACKGROUND TEXT",
                  "fontSize": 24,
                  "fontColor": "white",
                  "fontWeight": "bold",
                  "centerInParent": true
                },
                {
                  "type": "Label",
                  "text": "This will be blurred",
                  "fontSize": 16,
                  "fontColor": "light_orange",
                  "topMargin": 50,
                  "leftMargin": 20
                }
              ]
            },
            {
              "type": "BlurView",
              "width": "matchParent",
              "height": 60,
              "centerInParent": true,
              "blurRadius": 20,
              "background": "black_2",
              "child": [
                {
                  "type": "Label",
                  "text": "Clear Text on Blur Layer",
                  "fontSize": 18,
                  "fontColor": "white",
                  "fontWeight": "bold",
                  "centerInParent": true
                }
              ]
            }
          ]
        },
        {
          "type": "Label",
          "text": "WebView Test",
          "fontSize": 18,
          "fontColor": "dark_gray",
          "topMargin": 20
        },
        {
          "type": "WebView",
          "width": "matchParent",
          "height": 200,
          "topMargin": 10,
          "url": "https://www.example.com"
        },
        {
          "type": "Label",
          "text": "TabView Test",
          "fontSize": 18,
          "fontColor": "dark_gray",
          "topMargin": 20
        },
        {
          "type": "TabView",
          "width": "matchParent",
          "height": 200,
          "topMargin": 10,
          "selectedTabIndex": 0,
          "tabs": [
            {
              "title": "Tab 1",
              "child": [
                {
                  "type": "Label",
                  "text": "Content of Tab 1",
                  "fontSize": 14,
                  "centerInParent": true,
                  "fontColor": "black"
                }
              ]
            },
            {
              "title": "Tab 2",
              "child": [
                {
                  "type": "Label",
                  "text": "Content of Tab 2",
                  "fontSize": 14,
                  "centerInParent": true,
                  "fontColor": "black"
                }
              ]
            }
          ]
        },
        {
          "type": "Label",
          "text": "Collection Test",
          "fontSize": 18,
          "fontColor": "dark_gray",
          "topMargin": 20
        },
        {
          "type": "Collection",
          "width": "matchParent",
          "height": 300,
          "topMargin": 10,
          "itemSpacing": 15,
          "sections": [
            {
              "cell": "ConverterTestCell",
              "columns": 3
            }
          ],
          "items": "@{items}"
        },
        {
          "type": "Label",
          "text": "Image Test",
          "fontSize": 18,
          "fontColor": "dark_gray",
          "topMargin": 20
        },
        {
          "type": "Image",
          "width": 100,
          "height": 100,
          "topMargin": 10,
          "srcName": "star.fill",
          "defaultImage": "exclamationmark.triangle",
          "contentMode": "scaleAspectFit"
        },
        {
          "type": "Label",
          "text": "NetworkImage Test",
          "fontSize": 18,
          "fontColor": "dark_gray",
          "topMargin": 20
        },
        {
          "type": "NetworkImage",
          "width": 200,
          "height": 150,
          "topMargin": 10,
          "src": "https://picsum.photos/400/300",
          "defaultImage": "photo",
          "contentMode": "scaleAspectFill",
          "cornerRadius": 10
        }
      ]
    }
  ],
  "data": [
    {
      "name": "dynamicModeStatus",
      "class": "String",
      "defaultValue": "OFF"
    },
    {
      "name": "items",
      "class": "CollectionDataSource",
      "defaultValue": "CollectionDataSource()"
    },
    {
      "name": "title",
      "class": "String",
      "defaultValue": "Converter Components Test"
    }
  ]
}